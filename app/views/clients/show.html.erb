<div class="container-fluid padding-25 sm-padding-10">

  <div class="row">

    <div class="col-md-6 m-b-10">

      <div class="widget-13 panel no-border  no-margin widget-loader-circle">

        <div class="panel-heading pull-up top-right ">
          <div class="panel-controls">
            <ul>
              <li><a href="#" class="portlet-refresh text-black" data-toggle="refresh"><i class="portlet-icon portlet-icon-refresh"></i></a>
              </li>
            </ul>
          </div>
        </div>

        <div class="container-sm-height no-overflow">
          <div class="row row-sm-height">
            <div class="col-sm-6 col-lg-6 col-xlg-6 col-sm-height col-top no-padding">
              <div class="panel-heading ">
                <div class="panel-title">Informations Client</div>
              </div>
              <div class="panel-body">
                <p class="hint-text all-caps font-montserrat small no-margin ">Client<i class="fa fa-pencil pull-right"></i></p>
                <p class="all-caps font-montserrat  no-margin text-success "><%= @clients.firstname + " " + @clients.name %></p>
                <p class="all-caps font-montserrat  no-margin text-success "><%= @clients.address %></p>
                <p class="all-caps font-montserrat  no-margin text-success "><%= @clients.zipcode + " " + @clients.city %></p>
                <br>
                <p class="hint-text all-caps font-montserrat small no-margin ">Coordonnées<i class="fa fa-pencil pull-right"></i></p>
                <p class="all-caps font-montserrat  no-margin text-warning ">mails</p>
                <p class="all-caps font-montserrat  no-margin text-warning ">téléphone</p>
                <br>
                <p class="hint-text all-caps font-montserrat small no-margin ">Informations complémentaires<i class="fa fa-pencil pull-right"></i></p>
                <p class="all-caps font-montserrat  no-margin text-success ">Date de naissance</p>
                <p class="all-caps font-montserrat  no-margin text-success ">Date de mariage</p>
              </div>
            </div>
            <div class="col-sm-6 col-lg-6 col-xlg-6 col-sm-height col-top no-padding relative">

                <div id="map" style='width: 100%; height: 400px;'></div>

            </div>
          </div>
        </div>
      </div>

    </div>

    <div class="col-md-6 col-xlg-4">

    </div>

  </div>

</div>

