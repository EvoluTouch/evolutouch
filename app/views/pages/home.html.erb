<!-- START CONTAINER FLUID -->
<div class="container-fluid padding-25 sm-padding-10">
  <!-- START ROW -->
  <div class="row">
    <div class="col-md-6 col-xlg-4">
      <div class="row">
        <div class="col-sm-6 m-b-10">
          <%= link_to(clients_path) do %>
            <div class="ar-1-1">
              <!-- START WIDGET widget_imageWidgetBasic-->
              <div class="widget-client panel no-border bg-primary widget no-margin">
                <div class="panel-body">
                  <div class="pull-bottom bottom-left bottom-right padding-25">
                    <span class="label font-montserrat fs-11"><%= @countclients %> CLIENTS</span>
                    <br>
                    <h3 class="text-white">Gestion Clients</h3>
                    <p class="text-white hint-text hidden-md">Création, modification...</p>
                  </div>
                </div>
              </div>
              <!-- END WIDGET -->
            </div>
          <% end %>
        </div>
        <div class="col-sm-6 m-b-10">
          <%= link_to(root_path) do %>
            <div class="ar-1-1">
              <!-- START WIDGET widget_imageWidgetBasic-->
                <div class="widget-emailing panel no-border bg-complete widget no-margin">
                  <div class="panel-body">
                    <div class="pull-bottom bottom-left bottom-right padding-25">
                      <span class="label font-montserrat fs-11">COMING SOON</span>
                      <br>
                      <h3 class="text-white">Campagne Emailing</h3>
                      <p class="text-white hint-text hidden-md">Ciblage, création, diffusion...</p>
                    </div>
                  </div>
                </div>
                <!-- END WIDGET -->
            </div>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6 m-b-10">

        </div>
        <div class="col-sm-6 m-b-10">

        </div>
      </div>
    </div>
    <div class="col-md-6 col-xlg-4">
      <div class="row">
        <div class="col-sm-6 m-b-10">
          <%= mail_to("contact@evolutouch.com") do %>
            <div class="ar-1-1">
              <!-- START WIDGET widget_imageWidgetBasic-->
              <div class="widget-robot panel no-border bg-danger widget no-margin">
                <div class="panel-body">
                  <div class="pull-bottom bottom-left bottom-right padding-25">
                    <span class="label font-montserrat fs-11">COMING SOON</span>
                    <br>
                    <h3 class="text-white">Modules à venir !</h3>
                    <p class="text-white hint-text hidden-md">Participer à l'optimisation d'EvoluTouch.</p>
                  </div>
                </div>
              </div>
              <!-- END WIDGET -->
            </div>
          <% end %>
        </div>
        <div class="col-sm-6 m-b-10">

        </div>
      </div>
      <div class="row">
        <div class="col-sm-6 m-b-10">

        </div>
        <div class="col-sm-6 m-b-10">

        </div>
      </div>
    </div>
  </div>
  <!-- END ROW -->
</div>
